{
  "name": "n-body-wasm-canvas",
  "description": "A n-body simulation, calculated with wasm, and visualized with canvas",
  "version": "1.0.0",
  "scripts": {
    "start": "http-server dist",
    "copy-index": "mkdir -p dist && cp src/index.html dist",
    "build": "npm run copy-index && npm-run-all --parallel build-assembly build-rollup",
    "build-assembly": "gulp build",
    "build-rollup": "rollup -c",
    "dev": "npm run copy-index && npm-run-all --parallel dev-assembly dev-rollup dev-serve ",
    "dev-assembly": "gulp dev",
    "dev-rollup": "rollup -c -w",
    "dev-serve": "(sleep 1 && cd dist && pwd && lite-server)"
  },
  "devDependencies": {
    "assemblyscript": "github:AssemblyScript/assemblyscript",
    "gulp": "^3",
    "gulp-rename": "^1.4.0",
    "gulp-typescript": "^5.0.1",
    "gulp-watch": "^5.0.1",
    "http-server": "^0.11.1",
    "lite-server": "^2.5.4",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.21.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-node-resolve": "^5.1.0",
    "rollup-plugin-terser": "^5.0.0",
    "typescript": "^3.6.3"
  }
}
